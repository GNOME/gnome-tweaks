<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <template class="GTweakWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwLeaflet" id="header">
          </object>
        </child>
        <child>
          <object class="AdwLeaflet" id="main_leaflet">
            <child>
              <object class="AdwLeafletPage">
                <property name="name">sidebar</property>
                <property name="child">
                  <object class="GtkBox" id="left_box">
                    <property name="orientation">vertical</property>
                    <property name="hexpand">0</property>
                    <child>
                      <object class="GtkSearchBar" id="searchbar">
                        <property name="child">
                          <object class="GtkSearchEntry" id="entry">
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>

                      <object class="GtkScrolledWindow">
                        <property name="hscrollbar-policy">never</property>
                        <property name="hexpand">1</property>
                        <property name="vexpand">1</property>

                        <child>
                          <object class="GtkListBox" id="listbox">
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">fonts</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">font-x-generic-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Fonts</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">appearance</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">preferences-other-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Appearance</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow" id="list_box_row_sound">
                                <property name="tweakname">sound</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>     
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">multimedia-volume-control-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Sound</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">mouse</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">input-mouse-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Mouse &amp; Touchpad</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">keyboard</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">input-keyboard-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Keyboard</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">window-management</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">video-display-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Windows</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GTweakListBoxRow">
                                <property name="tweakname">startup-applications</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">12</property>
                                    <property name="margin-bottom">12</property>
                                    <property name="spacing">12</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">inode-directory-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="halign">start</property>
                                        <property name="label" translatable="1">Startup Applications</property>
                                        <property name="hexpand">1</property>
                                        <property name="vexpand">1</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <style>
                              <class name="navigation-sidebar" />
                            </style>
                          </object>
                        </child>

                      </object>
                    </child>
                  </object>

                </property>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="vexpand">1</property>
              </object>

            </child>
            <child>
              <object class="AdwLeafletPage">
                <property name="name">content</property>
                <property name="child">
                  <object class="GtkBox" id="right_box">

                    <property name="hexpand">1</property>
                    <property name="orientation">vertical</property>
                    <property name="width-request">320</property>
                    <child>
                      <object class="GtkScrolledWindow" id="main_content_scroll">
                        <property name="hexpand">1</property>
                        <property name="vexpand">1</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>